<div id="<%= dom_id example %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= example.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= example.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this example", example, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this example', edit_example_path(example), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
